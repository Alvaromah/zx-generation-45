{
  "name": "zx-generation",
  "version": "1.0.0",
  "description": "A high-fidelity ZX Spectrum 48K emulator in JavaScript",
  "type": "module",
  "main": "dist/zxgeneration.umd.js",
  "module": "dist/zxgeneration.esm.js",
  "exports": {
    ".": {
      "import": "./dist/zxgeneration.esm.js",
      "require": "./dist/zxgeneration.umd.js"
    },
    "./audio-worklet": "./dist/audio-worklet.js"
  },
  "files": [
    "dist",
    "rom",
    "src"
  ],
  "scripts": {
    "dev": "node dev-server.js",
    "start": "node -e \"console.log('Open examples/basic.html in your browser')\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "build": "rollup -c",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "zx-spectrum",
    "emulator",
    "z80",
    "retro",
    "gaming",
    "javascript",
    "web",
    "spectrum",
    "sinclair",
    "8-bit"
  ],
  "author": "ZX Generation Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/zx-generation.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/zx-generation/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/zx-generation#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.0.3",
    "rollup": "^4.0.0"
  }
}
